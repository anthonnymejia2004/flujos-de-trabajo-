{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "pharma-sync",
    "version": "1.0.0",
    "description": "Sistema de gesti√≥n de farmacia - Inventario, ventas y reportes",
    "author": "Pharma-Sync Team",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "electron:dev": "electron . --dev",
        "electron:build": "vite build && electron-builder --win --x64",
        "start": "electron ."
    },
    "dependencies": {},
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.23",
        "axios": "^1.11.0",
        "electron": "^40.4.1",
        "electron-builder": "^26.7.0",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "vite": "^7.0.7"
    },
    "build": {
        "appId": "com.pharmasync.app",
        "productName": "Pharma-Sync",
        "directories": {
            "buildResources": "electron/assets",
            "output": "dist-electron"
        },
        "files": [
            "electron/**/*",
            "public/**/*",
            "app/**/*",
            "bootstrap/**/*",
            "config/**/*",
            "database/**/*",
            "resources/**/*",
            "routes/**/*",
            "storage/**/*",
            "vendor/**/*",
            "artisan",
            "composer.json",
            "composer.lock",
            ".env.example"
        ],
        "win": {
            "target": "nsis",
            "icon": "electron/assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
